---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';

const games = [
  {
    title: 'Space Invaders',
    description: 'Retro shooter with fluid controls, wave pressure, and particle-heavy feedback.',
    image: '/assets/space-invaders.png',
    technologies: ['JavaScript', 'Canvas', 'CSS', 'Game Physics'],
    githubUrl: 'https://github.com/BryanPMX/Professional_Portfolio/blob/main/src/pages/games/space-invaders.astro',
    gameUrl: '/games/space-invaders'
  },
  {
    title: 'Snake Game',
    description: 'Classic loop, modern feel: fast input, escalating pace, and high-score tracking.',
    image: '/assets/snake-game.png',
    technologies: ['JavaScript', 'Canvas API', 'Local Storage'],
    githubUrl: 'https://github.com/BryanPMX/Professional_Portfolio/blob/main/src/pages/games/snake.astro',
    gameUrl: '/games/snake'
  }
];
---

<Layout title="Games - Bryan Perez">
  <div class="min-h-screen">
    <section class="py-20 px-6 reveal-on-scroll">
      <div class="max-w-6xl mx-auto grid gap-10 lg:grid-cols-[1.05fr_0.95fr] items-center">
        <div class="space-y-5">
          <div class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-3 py-2 text-xs font-semibold uppercase tracking-[0.2em] text-dark-text-secondary">
            Browser-native | Built from scratch
          </div>
          <h1 class="text-4xl lg:text-5xl font-semibold text-gradient-accent leading-tight">
            Playable systems with tight game feel.
          </h1>
          <p class="text-lg text-dark-text-secondary max-w-2xl">
            I design and code game loops, effects, and controls for desktop and mobile browsers.
          </p>
        </div>
        <div class="panel gradient-border interactive-card p-6">
          <div class="grid gap-4 sm:grid-cols-2">
            {[
              { label: 'Performance', value: '60 FPS target' },
              { label: 'Input', value: 'Low-latency controls' },
              { label: 'Modes', value: 'Keyboard and touch' },
              { label: 'Rendering', value: 'Canvas effects' }
            ].map((item) => (
              <div class="rounded-xl border border-white/5 bg-white/5 p-4">
                <p class="text-xs uppercase tracking-[0.2em] text-dark-text-secondary">{item.label}</p>
                <p class="text-lg font-semibold mt-1">{item.value}</p>
              </div>
            ))}
          </div>
          <p class="mt-4 text-sm text-dark-text-secondary">No download. Open and play.</p>
        </div>
      </div>
    </section>

    <section class="pb-20 px-6 reveal-on-scroll">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {games.map((game) => (
            <ProjectCard
              title={game.title}
              description={game.description}
              image={game.image}
              technologies={game.technologies}
              githubUrl={game.githubUrl}
              gameUrl={game.gameUrl}
              type="game"
            />
          ))}
        </div>
      </div>
    </section>

    <section class="py-20 px-6 bg-dark-surface/70 reveal-on-scroll">
      <div class="max-w-6xl mx-auto grid gap-12 lg:grid-cols-[1fr_1fr]">
        <div class="space-y-4">
          <p class="text-sm uppercase tracking-[0.2em] text-dark-text-secondary">Build priorities</p>
          <h2 class="text-3xl lg:text-4xl font-semibold">Readable feedback. Responsive controls.</h2>
          <p class="text-dark-text-secondary">I optimize loop timing, collision logic, and player clarity before adding complexity.</p>
        </div>
        <div class="grid gap-4 md:grid-cols-2">
          <div class="panel gradient-border interactive-card p-4">
            <h3 class="text-lg font-semibold mb-2">Loop Design</h3>
            <p class="text-sm text-dark-text-secondary">Deterministic updates and smooth frame pacing.</p>
          </div>
          <div class="panel gradient-border interactive-card p-4">
            <h3 class="text-lg font-semibold mb-2">Visual Feedback</h3>
            <p class="text-sm text-dark-text-secondary">Particles, flashes, and clear hit confirmation.</p>
          </div>
          <div class="panel gradient-border interactive-card p-4">
            <h3 class="text-lg font-semibold mb-2">Control Quality</h3>
            <p class="text-sm text-dark-text-secondary">Fast response for keyboard and touch input.</p>
          </div>
          <div class="panel gradient-border interactive-card p-4">
            <h3 class="text-lg font-semibold mb-2">Balancing</h3>
            <p class="text-sm text-dark-text-secondary">Difficulty tuning from score and timing data.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="py-20 px-6 reveal-on-scroll">
      <div class="max-w-4xl mx-auto panel gradient-border interactive-card p-10 text-center space-y-6">
        <h2 class="text-3xl lg:text-4xl font-semibold">Want to build a game idea?</h2>
        <p class="text-xl text-dark-text-secondary max-w-3xl mx-auto">I can help scope, prototype, and ship the core mechanic.</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/projects" class="cta-ghost">See software work</a>
          <a href="/contact" class="cta-solid">Discuss concept</a>
        </div>
      </div>
    </section>
  </div>
</Layout>
