---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact - Bryan Perez">
  <div class="min-h-screen">
    <!-- Header Section -->
    <section class="py-20 px-6">
      <div class="max-w-5xl mx-auto text-center space-y-4">
        <div class="inline-flex items-center justify-center gap-2 rounded-full border border-white/10 bg-white/5 px-4 py-2 text-xs font-semibold uppercase tracking-[0.2em] text-dark-text-secondary">
          Let's collaborate
        </div>
        <h1 class="text-4xl lg:text-5xl font-semibold text-gradient-accent">Tell me about your project, research, or game idea.</h1>
        <p class="text-lg text-dark-text-secondary max-w-3xl mx-auto">
          Prefer email? Reach me at <a href="mailto:perez.bryan24@outlook.com" class="text-accent underline">perez.bryan24@outlook.com</a>. Phone works too—I’m based in El Paso, TX (MT).
        </p>
      </div>
    </section>

    <!-- Contact Form & Info -->
    <section class="pb-20 px-6">
      <div class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-[1fr_1.05fr] gap-8">
        <!-- Contact Information -->
        <div class="panel gradient-border p-6 space-y-6">
          <div class="space-y-2">
            <p class="text-sm uppercase tracking-[0.2em] text-dark-text-secondary">Direct contact</p>
            <h2 class="text-2xl font-semibold">Ways to reach me</h2>
            <p class="text-sm text-dark-text-secondary">Pick the channel that works best for you—I'm flexible.</p>
          </div>
          
          <div class="space-y-3">
            <a 
              href="mailto:perez.bryan24@outlook.com"
              class="flex items-center gap-4 rounded-xl border border-white/10 bg-white/5 p-4 hover:border-accent transition-colors"
            >
              <div class="h-12 w-12 rounded-lg bg-accent/20 grid place-items-center text-accent">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <p class="font-semibold">Personal Email</p>
                <p class="text-dark-text-secondary text-sm">perez.bryan24@outlook.com</p>
              </div>
            </a>
            <a 
              href="mailto:bperez21@miners.utep.edu"
              class="flex items-center gap-4 rounded-xl border border-white/10 bg-white/5 p-4 hover:border-accent transition-colors"
            >
              <div class="h-12 w-12 rounded-lg bg-accent/20 grid place-items-center text-accent">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
                </svg>
              </div>
              <div>
                <p class="font-semibold">University Email</p>
                <p class="text-dark-text-secondary text-sm">bperez21@miners.utep.edu</p>
              </div>
            </a>
            <div 
              class="flex items-center gap-4 rounded-xl border border-white/10 bg-white/5 p-4"
            >
              <div class="h-12 w-12 rounded-lg bg-accent/20 grid place-items-center text-accent">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h2l2 5-2 1c.5 1.5 1.5 3.5 3 5s3.5 2.5 5 3l1-2 5 2v2a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <p class="font-semibold">Phone</p>
                <p class="text-dark-text-secondary text-sm">(915) 887-1622</p>
              </div>
            </div>
          </div>

          <div class="grid grid-cols-2 gap-3">
            <div class="rounded-xl border border-white/10 bg-white/5 p-4">
              <p class="text-xs uppercase tracking-[0.2em] text-dark-text-secondary">Availability</p>
              <p class="text-sm font-semibold">Accepting new work</p>
            </div>
            <div class="rounded-xl border border-white/10 bg-white/5 p-4">
              <p class="text-xs uppercase tracking-[0.2em] text-dark-text-secondary">Preferred timezone</p>
              <p class="text-sm font-semibold">Mountain (US)</p>
            </div>
          </div>

          <div class="space-y-3">
            <p class="text-sm uppercase tracking-[0.2em] text-dark-text-secondary">Connect</p>
            <div class="flex flex-wrap gap-3">
              <a 
                href="https://github.com/BryanPMX" 
                target="_blank"
                rel="noopener noreferrer"
                class="social-pill"
              >
                GitHub
              </a>
              <a 
                href="https://linkedin.com/in/brpmx" 
                target="_blank"
                rel="noopener noreferrer"
                class="social-pill"
              >
                LinkedIn
              </a>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="panel gradient-border p-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-semibold">Send a Message</h2>
            <span class="rounded-full bg-green-500/15 px-3 py-1 text-xs font-semibold text-green-300">Open</span>
          </div>
          <form id="contact-form" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium mb-2">Name *</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-3 bg-dark-card border border-white/10 rounded-lg focus:border-accent focus:outline-none transition-colors text-dark-text"
                placeholder="Your full name"
              />
            </div>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <label for="email" class="block text-sm font-medium mb-2">Email *</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  class="w-full px-4 py-3 bg-dark-card border border-white/10 rounded-lg focus:border-accent focus:outline-none transition-colors text-dark-text"
                  placeholder="your.email@example.com"
                />
              </div>
              <div>
                <label for="subject" class="block text-sm font-medium mb-2">Subject *</label>
                <select 
                  id="subject" 
                  name="subject" 
                  required
                  class="w-full px-4 py-3 bg-dark-card border border-white/10 rounded-lg focus:border-accent focus:outline-none transition-colors text-dark-text"
                >
                  <option value="">Select a subject</option>
                  <option value="job-opportunity">Job Opportunity</option>
                  <option value="project-collaboration">Project Collaboration</option>
                  <option value="freelance-work">Freelance Work</option>
                  <option value="game-idea">Game Idea</option>
                  <option value="research">Research</option>
                  <option value="other">Other</option>
                </select>
              </div>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium mb-2">Message *</label>
              <textarea 
                id="message" 
                name="message" 
                rows="6" 
                required
                class="w-full px-4 py-3 bg-dark-card border border-white/10 rounded-lg focus:border-accent focus:outline-none transition-colors text-dark-text resize-none"
                placeholder="Tell me about your project or opportunity..."
              ></textarea>
            </div>
            
            <button 
              type="submit"
              class="w-full cta-solid disabled:opacity-50 disabled:cursor-not-allowed"
            >
              <span class="submit-text">Send Message</span>
              <span class="loading-text hidden">Sending...</span>
            </button>
          </form>
          
          <!-- Form Status Messages -->
          <div id="form-success" class="hidden mt-4 p-4 rounded-lg border border-green-500/40 bg-green-500/10">
            <p class="text-green-300">Message sent successfully! I'll get back to you soon.</p>
          </div>

          <div id="form-error" class="hidden mt-4 p-4 rounded-lg border border-red-500/40 bg-red-500/10">
            <p class="text-red-300">There was an error sending your message. Please try again or email me directly.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-20 px-6 bg-dark-surface/70">
      <div class="max-w-5xl mx-auto space-y-6">
        <h2 class="text-3xl lg:text-4xl font-semibold text-center">FAQ</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {[
            { q: 'What type of projects are you interested in?', a: 'Full-stack web platforms, interactive applications, ML tooling, and browser-native games.' },
            { q: 'Are you available for freelance work?', a: 'Yes—short engagements to multi-month builds. I prefer projects with measurable outcomes.' },
            { q: 'Preferred tech stack?', a: 'TypeScript/React/Next, Go or Python backends, PostgreSQL/Neo4j, Tailwind, Astro.' },
            { q: 'How quickly can you start?', a: 'I can begin discovery immediately and start implementation within 1–2 weeks depending on scope.' }
          ].map((item) => (
            <div class="panel gradient-border p-4">
              <h3 class="text-lg font-semibold mb-1">{item.q}</h3>
              <p class="text-sm text-dark-text-secondary leading-relaxed">{item.a}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  </div>
</Layout>

<script>
  // Contact form handling
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contact-form');
    const submitButton = form?.querySelector('button[type="submit"]');
    const submitText = submitButton?.querySelector('.submit-text');
    const loadingText = submitButton?.querySelector('.loading-text');
    const successMessage = document.getElementById('form-success');
    const errorMessage = document.getElementById('form-error');
    
    if (!form || !submitButton) return;
    
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // Show loading state
      submitButton.disabled = true;
      submitText?.classList.add('hidden');
      loadingText?.classList.remove('hidden');
      
      // Hide previous messages
      successMessage?.classList.add('hidden');
      errorMessage?.classList.add('hidden');
      
      try {
        // Simulate form submission (replace with actual endpoint)
        await new Promise(resolve => setTimeout(resolve, 2000));
        
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        console.log('Form data:', data);
        
        // Show success message
        successMessage?.classList.remove('hidden');
        form.reset();
        
      } catch (error) {
        // Show error message
        errorMessage?.classList.remove('hidden');
        console.error('Form submission error:', error);
      } finally {
        // Reset button state
        submitButton.disabled = false;
        submitText?.classList.remove('hidden');
        loadingText?.classList.add('hidden');
      }
    });
  });
</script>
